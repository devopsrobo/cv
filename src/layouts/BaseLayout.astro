---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource/montserrat';
const { pageTitle } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta
            name="keywords"
            content="cuvimaker,Astro,CV,Online,Editor,CV Maker,CSS,JavaScript,Github,Repository"
        />
        <link rel="icon" type="image/svg+xml" href="/cuvimaker.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <title>Online CV Maker {pageTitle}</title>
        <meta
            name="description"
            content="An online editor of cv, SEO-friendly made in Astro"
        />
    </head>
    <body
        class="font-[Montserrat] text-[var(--primary-color)] bg-[#f5f0ff] dark:text-gray-300 dark:bg-[#130624] transition-colors duration-500 dark:transition-colors dark:duration-500"
    >
        <Header />
        <main class="m-10">
            <h1 class="text-4xl mt-8 mb-8 font-bold dark:text-white">
                {pageTitle}
            </h1>
            <slot />
            <Footer />
        </main>
    </body>
</html>
